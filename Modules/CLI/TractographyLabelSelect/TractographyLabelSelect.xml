<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>
  Diffusion.Tractography
  </category>
  <title>
  TractographyLabelSelect
  </title>
  <description>
  Select tracts using Labels (regions of interest)
  </description>
  <version>0.1.0.$Revision: 1892 $(alpha)</version>
  <documentation-url></documentation-url>
  <license></license>
  <contributor>Demian Wassermann, Lauren O'Donnell</contributor>
  <acknowledgements>BWH, NCIGT/LMI</acknowledgements>

  <parameters>
    <label>IO</label>
    <description>Input/output parameters</description>
    <image type ="label">
      <name>InputLabel_A</name>
      <label>Input Label Map</label>
      <channel>input</channel>
      <index>0</index>
      <description>Label map with selection Label</description>
    </image>
    <geometry type = "fiberbundle">
      <name>InputFibers</name>
      <label>Input Fiber Bundle</label>
      <channel>input</channel>
      <index>1</index>
      <description>Input tractography</description>
    </geometry>
    <geometry type = "fiberbundle">
      <name>OutputFibers</name>
      <label>Output Fiber Bundle</label>
      <channel>output</channel>
      <index>2</index>
      <description>Selected tractography result</description>
    </geometry>
  </parameters>
  
  <parameters>
    <label>Label definition</label>
    <description>Selection of label/s</description>
    
    <integer-vector>
      <name>PassLabel</name>
      <label> Label pass label</label>
      <flag>-p</flag>
      <longflag>--pass</longflag>
      <description>Label value that defines pass region.</description>
      <default>1</default>
    </integer-vector>

    <integer-vector>
      <name>NotPassLabel</name>
      <label> Label not pass</label>
      <flag>-n</flag>
      <longflag>--nopass</longflag>
      <description>Label value that defines no pass region.</description>
      <default></default>
    </integer-vector>

  </parameters>  
</executable>
